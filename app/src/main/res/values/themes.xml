<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JobTop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/baseWhite</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightBaseButton</item>
    </style>


    <style name="BaseButton.Blue">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_base_button_blue</item>
        <item name="android:textColor">@color/baseWhite</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/marginSideNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginSideNormal</item>
        <item name="android:layout_marginLeft">@dimen/marginSideNormal</item>
        <item name="android:layout_marginRight">@dimen/marginSideNormal</item>
        <item name="android:layout_marginTop">@dimen/marginBase</item>
        <item name="android:layout_marginBottom">@dimen/marginBase</item>
    </style>

    <style name="Text">
        <item name="font">@font/poppins_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Link">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/baseLinkColor</item>
    </style>

    <style name="Text.Link.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/baseWhite</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/textNormalSmall</item>
<!--        <item name="android:backgroundTint">@color/</item>-->
    </style>


</resources>