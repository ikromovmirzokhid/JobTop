    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/registerUserBtn"
            style="@style/BaseButton.Blue"
            android:text="Registratsiya" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBase"
            android:gravity="center">

            <TextView
                style="@style/Text.Black"
                android:text="Akkauntingiz bormi?"
                android:textSize="@dimen/textNormalSmall" />

            <TextView
                android:id="@+id/enterBtn"
                style="@style/Text.Link"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
